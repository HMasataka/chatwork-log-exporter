{
  "manifest_version": 3,
  "name": "Chatwork Log Exporter",
  "version": "1.0.0",
  "description": "Export Chatwork room messages and attachments",
  "permissions": [
    "storage",
    "downloads",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.chatwork.com/*",
    "https://*.chatwork.com/*",
    "https://kcw.kddi.ne.jp/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.chatwork.com/*",
        "https://*.chatwork.com/*",
        "https://kcw.kddi.ne.jp/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
